generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(uuid()) @db.Uuid
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  deletedAt DateTime?

  email          String   @unique
  hashedPassword String
  fullName       String
  role           UserRole @default(SALESMAN)

  salesman     Salesman?
  userSessions UserSession[]
}

enum UserRole {
  ADMIN
  MANAGER
  SALESMAN
}

model UserSession {
  id        String    @id @default(uuid()) @db.Uuid
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  deletedAt DateTime?
  expiresAt DateTime

  userId    String @db.Uuid
  sessionId String @unique @default(uuid()) @db.Uuid

  user User @relation(fields: [userId], references: [id])
}

model Salesman {
  id        String    @id @default(uuid()) @db.Uuid
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  deletedAt DateTime?

  userId       String @unique @db.Uuid
  departmentId String @db.Uuid

  user       User       @relation(fields: [userId], references: [id])
  department Department @relation(fields: [departmentId], references: [id])
  leads      Lead[]
}

model Department {
  id        String    @id @default(uuid()) @db.Uuid
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  deletedAt DateTime?

  name      String
  salesmans Salesman[]
}

model Event {
  id        String    @id @default(uuid()) @db.Uuid
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  deletedAt DateTime?

  name        String
  description String?
  startDate   DateTime?
  endDate     DateTime?
  leads       Lead[]
}

model Lead {
  id        String    @id @default(uuid()) @db.Uuid
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  deletedAt DateTime?

  eventId    String @db.Uuid
  salesmanId String @db.Uuid

  name        String
  country     String
  companyName String?
  email       String?
  designation String?
  phone       String?
  notes       String?
  address     String?
  website     String?
  brands      Brand[]

  event    Event    @relation(fields: [eventId], references: [id])
  salesman Salesman @relation(fields: [salesmanId], references: [id])
  images   Image[]
}

model Brand {
  id        String    @id @default(uuid()) @db.Uuid
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  deletedAt DateTime?

  name  String @unique
  leads Lead[]
}

model Image {
  id        String    @id @default(uuid()) @db.Uuid
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  deletedAt DateTime?

  filename String
  url      String
  leadId   String? @db.Uuid

  lead Lead? @relation(fields: [leadId], references: [id])
}
